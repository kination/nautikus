{
  "apiVersion": "workflow.my.domain/v1",
  "kind": "Dag",
  "metadata": {
    "name": "example-dag"
  },
  "spec": {
    "tasks": [
      {
        "name": "print-date",
        "type": "Bash",
        "dependencies": [],
        "command": "date"
      },
      {
        "name": "random-py",
        "type": "Python",
        "dependencies": [
          "print-date"
        ],
        "script": "\nimport random\nprint(f\"Random number: {random.randint(1, 100)}\")\n"
      },
      {
        "name": "hello-go",
        "type": "Go",
        "dependencies": [
          "random-py"
        ],
        "script": "\npackage main\nimport \"fmt\"\nfunc main() {\n    fmt.Println(\"Hello from Go Operator!\")\n}\n"
      }
    ]
  }
}
